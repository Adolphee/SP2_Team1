<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="630.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EventsController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" style="-fx-font-weight: bold;" text="Opleiding:" />
      <ComboBox fx:id="opleidingen" focusTraversable="false" layoutX="14.0" layoutY="34.0" onAction="#setEvents" prefHeight="30.0" prefWidth="300.0" />
      <TableView fx:id="events" focusTraversable="false" layoutX="14.0" layoutY="74.0" onMouseClicked="#clearLabel" prefHeight="532.0">
        <columns>
          <TableColumn fx:id="colTrainer" editable="false" prefWidth="150.0" text="TRAINER" />
          <TableColumn fx:id="colAdres" editable="false" prefWidth="300.0" text="ADRES" />
            <TableColumn fx:id="colVan" editable="false" prefWidth="90.0" style="-fx-alignment: CENTER;" text="VAN" />
            <TableColumn fx:id="colTot" editable="false" prefWidth="90.0" style="-fx-alignment: CENTER;" text="TOT" />
            <TableColumn editable="false" prefWidth="75.0" sortable="false" text="DEELNAMES">
               <columns>
                  <TableColumn fx:id="colAant" editable="false" prefWidth="50.0" sortable="false" style="-fx-alignment: CENTER;" text="AANT" />
                  <TableColumn fx:id="colMax" editable="false" prefWidth="50.0" sortable="false" style="-fx-alignment: CENTER;" text="MAX" />
               </columns>
            </TableColumn>
        </columns>
      </TableView>
      <Button fx:id="bToevoegen" layoutX="810.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleToevoegen" styleClass="otherbtn" text="Event toevoegen" />
      <Label alignment="CENTER" layoutX="789.0" layoutY="240.0" prefHeight="64.0" prefWidth="172.0" text="Of selecteer een event in de tabel en kies een optie." textAlignment="CENTER" wrapText="true" />
      <Button fx:id="bBewerken" layoutX="825.0" layoutY="304.0" mnemonicParsing="false" onAction="#handleBewerken" prefWidth="100.0" styleClass="otherbtn" text="Bewerken" />
      <Button fx:id="bAfgelasten" layoutX="825.0" layoutY="346.0" mnemonicParsing="false" onAction="#handleAfgelasten" prefWidth="100.0" styleClass="otherbtn" text="Afgelasten" />
      <Label fx:id="lSelectie" alignment="CENTER" layoutX="800.0" layoutY="178.0" prefHeight="71.0" prefWidth="150.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
   </children>
</AnchorPane>
