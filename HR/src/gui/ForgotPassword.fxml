<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: d9e6f2;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
   <children>
      <Label layoutX="59.0" layoutY="54.0" text="E-mailadres die gekoppeld is aan uw account:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tForgotEmail" layoutX="81.0" layoutY="85.0" prefHeight="25.0" prefWidth="192.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="bForgotOK" layoutX="280.0" layoutY="85.0" mnemonicParsing="false" onAction="#verifyForgotEmail" style="-fx-cursor: hand;" styleClass="otherbtn" text="OK">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="lForgotPrompt" alignment="CENTER" layoutX="58.0" layoutY="125.0" prefHeight="54.0" prefWidth="284.0" textAlignment="CENTER" textFill="RED" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
